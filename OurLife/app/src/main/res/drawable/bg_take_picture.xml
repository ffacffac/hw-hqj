<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@android:color/white"/>
            <corners android:radius="100dp"/>
            <size
                android:width="100dp"
                android:height="100dp"/>
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        >
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="#f00d0c0c"/>
                    <corners android:radius="100dp"/>
                    <size
                        android:width="90dp"
                        android:height="90dp"/>
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#f0212121"/>
                    <corners android:radius="100dp"/>
                    <size
                        android:width="90dp"
                        android:height="90dp"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>